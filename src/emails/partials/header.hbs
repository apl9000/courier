<table role='presentation' cellpadding='0' cellspacing='0' class='w-full'>
  <tr>
    <td>
      {{#if logo}}
        <img src='{{logo}}' alt='{{logoAlt}}' class='email-logo' />
      {{/if}}
      {{#if avatar}}
        <img src='{{avatar}}' alt='{{avatarAlt}}' class='email-avatar' />
      {{/if}}
      <h1 class='email-heading'>{{title}}</h1>
      {{#if subtitle}}
        <p class='email-text-alt email-spacing-none'>{{subtitle}}</p>
      {{/if}}
    </td>
  </tr>
</table>
<hr class='email-divider-accent' />