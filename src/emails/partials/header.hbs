<table role='presentation' cellpadding='0' cellspacing='0'>
  <tr>
    <td>
      {{#if logo}}
      <img src='{{logo}}' alt='{{#if logoAlt}}{{logoAlt}}{{else}}Logo{{/if}}' class='email-logo' style='max-width: 150px; height: auto; margin-bottom: 1rem;' />
      {{/if}}
      {{#if avatar}}
      <img src='{{avatar}}' alt='{{#if avatarAlt}}{{avatarAlt}}{{else}}Avatar{{/if}}' class='email-avatar' style='width: 64px; height: 64px; border-radius: 50%; margin-bottom: 1rem;' />
      {{/if}}
      <h1 class='email-heading'>{{title}}</h1>
    </td>
  </tr>
</table>