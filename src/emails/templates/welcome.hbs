{{!-- Header --}}
{{> header title=title}}

{{!-- Welcome Message --}}
<div class="email-section">
  <p class="email-body">Hi <strong>{{name}}</strong>,</p>
  <p class="email-body">
    Welcome to {{companyName}}! We're excited to have you on board.
  </p>
</div>

{{!-- Feature highlights (optional) --}}
{{#if features}}
<div class="email-box-highlight">
  <p class="email-subheading email-spacing-none">What you can do:</p>
  <ul class="email-body email-spacing-sm">
    {{#each features}}
    <li>{{this}}</li>
    {{/each}}
  </ul>
</div>
{{/if}}

{{!-- CTA Button --}}
<div class="email-section-hero">
  <p class="email-body email-spacing-none">To get started, click the button below:</p>
  <p class="email-spacing-md">
    <a href="{{actionUrl}}" class="email-button-primary">GET STARTED</a>
  </p>
</div>

{{!-- Additional Info --}}
<div class="email-section">
  <p class="email-text-alt">
    If you have any questions, feel free to reach out to our support team.
  </p>
</div>
