{{!-- Header --}}
{{> header title="Welcome to {{companyName}}"}}

{{!-- Welcome Message --}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full mb-6" style="width: 100%; margin-bottom: 24px; border-collapse: collapse;">
  <tr>
    <td>
      <p class="email-body" style="font-size: 16px; color: #1f2937; line-height: 1.625; margin: 0 0 16px 0;">
        Hi <strong style="font-weight: 600;">{{name}}</strong>,
      </p>
      <p class="email-body" style="font-size: 16px; color: #1f2937; line-height: 1.625; margin: 0 0 16px 0;">
        Welcome to {{companyName}}! We're excited to have you on board.
      </p>
      <p class="email-body" style="font-size: 16px; color: #1f2937; line-height: 1.625; margin: 0 0 24px 0;">
        To get started, click the button below:
      </p>
    </td>
  </tr>
</table>

{{!-- CTA Button --}}
<table role="presentation" cellpadding="0" cellspacing="0" style="margin: 32px 0; border-collapse: collapse;">
  <tr>
    <td align="center">
      <a href="{{actionUrl}}" class="email-button" style="display: inline-block; padding: 12px 24px; background-color: #7c3aed; color: #ffffff; font-weight: 600; border-radius: 8px; text-decoration: none; font-size: 16px;">
        Get Started
      </a>
    </td>
  </tr>
</table>

{{!-- Additional Info --}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full" style="width: 100%; margin-top: 32px; border-collapse: collapse;">
  <tr>
    <td>
      <p class="text-sm text-gray-600" style="font-size: 14px; color: #4b5563; line-height: 1.5; margin: 0;">
        If you have any questions, feel free to reach out to our support team.
      </p>
    </td>
  </tr>
</table>