{{!-- Header --}}
{{> header title=title}}

{{!-- Notification Content --}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full mb-6">
  <tr>
    <td>
      <p class="email-body">
        {{{message}}}
      </p>
      {{#if details}}
      <p class="text-sm text-gray-600" >
        {{{details}}}
      </p>
      {{/if}}
      {{#if timestamp}}
      <p class="text-xs text-gray-600">
        <em>{{timestamp}}</em>
      </p>
      {{/if}}
    </td>
  </tr>
</table>