{{!-- Header --}}
{{> header title="{{title}}"}}

{{!-- Newsletter Content --}}
{{#each sections}}
<table role="presentation" cellpadding="0" cellspacing="0" class="email-section w-full" style="width: 100%; margin-bottom: 32px; border-collapse: collapse;">
  <tr>
    <td>
      {{#if heading}}
      <h2 class="text-xl font-semibold mb-4" style="font-size: 20px; font-weight: 600; color: #111827; margin: 0 0 16px 0;">
        {{heading}}
      </h2>
      {{/if}}
      <p class="email-body" style="font-size: 16px; color: #1f2937; line-height: 1.625; margin: 0 0 16px 0;">
        {{{content}}}
      </p>
      {{#if link}}
      <p style="margin: 16px 0 0 0;">
        <a href="{{link}}" class="email-link" style="color: #7c3aed; text-decoration: underline; font-weight: 500;">
          Read more &rarr;
        </a>
      </p>
      {{/if}}
    </td>
  </tr>
</table>
{{/each}}
