{{!-- Header --}}
{{> header title="Verify Your Email Address"}}

{{!-- Verification Message --}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full mb-6">
  <tr>
    <td>
      <p class="email-body">
        Hi <strong style="font-weight: 600;">{{name}}</strong>,
      </p>
      <p class="email-body">
        Please verify your email address by clicking the button below:
      </p>
    </td>
  </tr>
</table>

{{!-- CTA Button --}}
<table role="presentation" cellpadding="0" cellspacing="0">
  <tr>
    <td align="center">
      <a href="{{verificationUrl}}" class="email-button">
        Verify Email
      </a>
    </td>
  </tr>
</table>

{{!-- Verification Code --}}
{{#if verificationCode}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full">
  <tr>
    <td>
      <p class="text-sm text-gray-600">
        Or use this verification code:
      </p>
      <p class="text-2xl font-bold">
        {{verificationCode}}
      </p>
    </td>
  </tr>
</table>
{{/if}}

{{!-- Expiry Notice --}}
{{#if expiryHours}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full">
  <tr>
    <td>
      <p class="text-sm text-gray-600" >
        This link will expire in {{expiryHours}} hours.
      </p>
    </td>
  </tr>
</table>
{{/if}}
