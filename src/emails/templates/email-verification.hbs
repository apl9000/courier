{{!-- Header --}}
{{> header title="Verify Your Email Address"}}

{{!-- Verification Message --}}
<div class="email-section">
  <p class="email-body">Hi <strong>{{name}}</strong>,</p>
  <p class="email-body">
    Please verify your email address by clicking the button below:
  </p>
</div>

{{!-- CTA Button --}}
<div class="email-section email-text-center">
  <a href="{{verificationUrl}}" class="email-button-primary">VERIFY EMAIL</a>
</div>

{{!-- Verification Code --}}
{{#if verificationCode}}
<div class="email-box-highlight">
  <p class="email-text-alt email-spacing-none">Or use this verification code:</p>
  <p class="email-spacing-sm">
    <span class="email-code-lg">{{verificationCode}}</span>
  </p>
</div>
{{/if}}

{{!-- Expiry Notice --}}
{{#if expiryHours}}
<div class="email-section">
  <p class="email-text-alt">
    <em>This link will expire in {{expiryHours}} hours.</em>
  </p>
</div>
{{/if}}
