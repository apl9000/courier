{{!-- Header --}}
{{> header title="Verify Your Email Address"}}

{{!-- Verification Message --}}
<div class="email-section">
  <p class="email-body">Hi <strong>{{name}}</strong>,</p>
  <p class="email-body">Please verify your email address by clicking the button below:</p>
</div>

{{!-- CTA Button --}}
<div class="email-section email-text-center">
  <a href="{{verificationUrl}}" class="email-button">VERIFY EMAIL</a>
</div>

{{!-- Verification Code --}}
{{#if verificationCode}}
<div class="email-box">
  <p class="email-text-alt email-spacing-none">Or use this verification code:</p>
  <p class="email-code email-code-lg email-spacing-top">{{verificationCode}}</p>
</div>
{{/if}}

{{!-- Expiry Notice --}}
{{#if expiryHours}}
<div class="email-section">
  <p class="email-text-alt">This link will expire in {{expiryHours}} hours.</p>
</div>
{{/if}}
