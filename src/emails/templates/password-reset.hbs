{{!-- Header --}}
{{> header title="Reset Your Password"}}

{{!-- Reset Message --}}
<div class="email-section">
  <p class="email-body">Hi <strong>{{name}}</strong>,</p>
  <p class="email-body">
    We received a request to reset your password. Click the button below to create a new password:
  </p>
</div>

{{!-- CTA Button --}}
<div class="email-section email-text-center">
  <a href="{{resetUrl}}" class="email-button">RESET PASSWORD</a>
</div>

{{!-- Reset Code --}}
{{#if resetCode}}
<div class="email-box">
  <p class="email-text-alt email-spacing-none">Or use this reset code:</p>
  <p class="email-code email-code-lg email-spacing-top">{{resetCode}}</p>
</div>
{{/if}}

{{!-- Expiry & Security Notice --}}
<div class="email-section">
  {{#if expiryHours}}
  <p class="email-text-alt">This link will expire in {{expiryHours}} hours.</p>
  {{/if}}
  <p class="email-text-alt">
    If you didn't request a password reset, please ignore this email or contact support if you have concerns.
  </p>
</div>
