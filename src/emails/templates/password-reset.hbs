{{!-- Header --}}
{{> header title="Reset Your Password"}}

{{!-- Reset Message --}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full mb-6">
  <tr>
    <td>
      <p class="email-body">
        Hi <strong>{{name}}</strong>,
      </p>
      <p class="email-body">
        We received a request to reset your password. Click the button below to create a new password:
      </p>
    </td>
  </tr>
</table>

{{!-- CTA Button --}}
<table role="presentation" cellpadding="0" cellspacing="0">
  <tr>
    <td align="center">
      <a href="{{resetUrl}}" class="email-button">
        Reset Password
      </a>
    </td>
  </tr>
</table>

{{!-- Reset Code --}}
{{#if resetCode}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full">
  <tr>
    <td>
      <p class="text-sm text-gray-600">
        Or use this reset code:
      </p>
      <p class="text-2xl font-bold">
        {{resetCode}}
      </p>
    </td>
  </tr>
</table>
{{/if}}

{{!-- Expiry & Security Notice --}}
<table role="presentation" cellpadding="0" cellspacing="0">
  <tr>
    <td>
      {{#if expiryHours}}
      <p class="text-sm text-gray-600">
        This link will expire in {{expiryHours}} hours.
      </p>
      {{/if}}
      <p class="text-sm text-gray-600">
        If you didn't request a password reset, please ignore this email or contact support if you have concerns.
      </p>
    </td>
  </tr>
</table>
