{{!-- Header --}}
{{> header title="Reset Your Password"}}

{{!-- Reset Message --}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full mb-6" style="width: 100%; margin-bottom: 24px; border-collapse: collapse;">
  <tr>
    <td>
      <p class="email-body" style="font-size: 16px; color: #1f2937; line-height: 1.625; margin: 0 0 16px 0;">
        Hi <strong style="font-weight: 600;">{{name}}</strong>,
      </p>
      <p class="email-body" style="font-size: 16px; color: #1f2937; line-height: 1.625; margin: 0 0 16px 0;">
        We received a request to reset your password. Click the button below to create a new password:
      </p>
    </td>
  </tr>
</table>

{{!-- CTA Button --}}
<table role="presentation" cellpadding="0" cellspacing="0" style="margin: 32px 0; border-collapse: collapse;">
  <tr>
    <td align="center">
      <a href="{{resetUrl}}" class="email-button" style="display: inline-block; padding: 12px 24px; background-color: #7c3aed; color: #ffffff; font-weight: 600; border-radius: 8px; text-decoration: none; font-size: 16px;">
        Reset Password
      </a>
    </td>
  </tr>
</table>

{{!-- Reset Code --}}
{{#if resetCode}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full" style="width: 100%; margin-top: 32px; border-collapse: collapse;">
  <tr>
    <td>
      <p class="text-sm text-gray-600" style="font-size: 14px; color: #4b5563; line-height: 1.5; margin: 0 0 8px 0;">
        Or use this reset code:
      </p>
      <p class="text-2xl font-bold" style="font-size: 24px; font-weight: 700; color: #111827; margin: 8px 0 16px 0; letter-spacing: 2px;">
        {{resetCode}}
      </p>
    </td>
  </tr>
</table>
{{/if}}

{{!-- Expiry & Security Notice --}}
<table role="presentation" cellpadding="0" cellspacing="0" class="w-full" style="width: 100%; margin-top: 24px; border-collapse: collapse;">
  <tr>
    <td>
      {{#if expiryHours}}
      <p class="text-sm text-gray-600" style="font-size: 14px; color: #4b5563; line-height: 1.5; margin: 0 0 12px 0;">
        This link will expire in {{expiryHours}} hours.
      </p>
      {{/if}}
      <p class="text-sm text-gray-600" style="font-size: 14px; color: #4b5563; line-height: 1.5; margin: 0;">
        If you didn't request a password reset, please ignore this email or contact support if you have concerns.
      </p>
    </td>
  </tr>
</table>
