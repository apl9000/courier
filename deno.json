{
  "name": "@rivescloud/courier",
  "version": "0.0.0",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env mod.ts",
    "build:css": "deno run --allow-read --allow-write --allow-env --allow-run build-css.ts",
    "build:css:prod": "NODE_ENV=production deno run --allow-read --allow-write --allow-env --allow-run build-css.ts",
    "test": "deno test --allow-read --allow-env tests/",
    "test:unit": "deno test --allow-read --allow-env src/**/*.spec.ts",
    "test:integration": "deno test --allow-net --allow-read --allow-env tests/**/*.integration.spec.ts",
    "coverage": "deno coverage tests/ --lcov",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check mod.ts src/** tests/**"
  },
  "imports": {
    "@tailwindcss/cli": "npm:@tailwindcss/cli@^4.1.18",
    "nodemailer": "npm:nodemailer@^6.9.7",
    "handlebars": "npm:handlebars@^4.7.8",
    "tailwindcss": "npm:tailwindcss@^4.1.18"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true
  },
  "test": {
    "include": ["src/**/*.spec.ts"]
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "src/emails/**/*.hbs",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "**/*.spec.ts",
      ".github/**",
      ".specstory/**",
      "tests/**",
      "build-css.ts",
      "tailwind.config.js",
      "styles/**",
      "AGENTS.md",
      ".env",
      ".vscode/**",
      "deno.lock"
    ]
  }
}
